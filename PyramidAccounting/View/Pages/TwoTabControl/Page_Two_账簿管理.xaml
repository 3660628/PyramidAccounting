                                    <DataGridTextColumn x:Name="column33"	Binding="{Binding 余额1}"/>
                                    <DataGridTextColumn x:Name="column34"	Binding="{Binding 余额2}"/>
                                    <DataGridTextColumn x:Name="column35"	Binding="{Binding 余额3}"/>
                                    <DataGridTextColumn x:Name="column36"	Binding="{Binding 余额4}"/>
                                    <DataGridTextColumn x:Name="column37"	Binding="{Binding 余额5}"/>
                                    <DataGridTextColumn x:Name="column38"	Binding="{Binding 余额6}"/>
                                    <DataGridTextColumn x:Name="column39"	Binding="{Binding 余额7}"/>
                                    <DataGridTextColumn x:Name="column40"	Binding="{Binding 余额8}"/>
