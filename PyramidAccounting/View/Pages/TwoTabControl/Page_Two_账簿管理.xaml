                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Row="1" Grid.Column="36" Grid.ColumnSpan="6" />
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Row="1" Grid.Column="37" Grid.ColumnSpan="6" />
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Row="1" Grid.Column="38" Grid.ColumnSpan="6" />
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                            <Border BorderBrush="Blue" BorderThickness="1,0,0,0" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Column="5" Grid.ColumnSpan="13" Grid.RowSpan="2" />
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Column="17" Grid.ColumnSpan="13" Grid.RowSpan="2" />
                            <Border BorderBrush="Blue" BorderThickness="0,0,1,0" Grid.Column="31" Grid.RowSpan="2" />
                            <Border BorderBrush="Blue" BorderThickness="1,0,1,0" Grid.Column="31" Grid.ColumnSpan="13" Grid.RowSpan="2" />
                            <Label x:Name="Label_年" Content="年" HorizontalAlignment="Right" Grid.ColumnSpan="2"/>
                            <Label Content="月" Grid.Row="1" Grid.Column="0"/>
                            <Label Content="日" Grid.Row="1" Grid.Column="1"/>
                            <Label Content="凭证" HorizontalContentAlignment="Center" Grid.Column="2"/>
                            <Label Content="号数" HorizontalContentAlignment="Center" Grid.Column="2" Grid.Row="1"/>
                            <Label Content="摘要" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="3" Grid.RowSpan="2"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" Grid.RowSpan="2">
                                <Run Text="日" />
                                <LineBreak />
                                <Run Text="页" />
                            </TextBlock>
                            <Label Content="借方金额" HorizontalContentAlignment="Center" Grid.Column="5" Grid.ColumnSpan="12"/>
                            <Label Content="十" Grid.Column="5" Grid.Row="1" />
                            <Label Content="亿" Grid.Column="6" Grid.Row="1" />
                            <Label Content="千" Grid.Column="7" Grid.Row="1" />
                            <Label Content="百" Grid.Column="8" Grid.Row="1" />
                            <Label Content="十" Grid.Column="9" Grid.Row="1" />
                            <Label Content="万" Grid.Column="10" Grid.Row="1" />
                            <Label Content="千" Grid.Column="11" Grid.Row="1" />
                            <Label Content="百" Grid.Column="12" Grid.Row="1" />
                            <Label Content="十" Grid.Column="13" Grid.Row="1" />
                            <Label Content="元" Grid.Column="14" Grid.Row="1" />
                            <Label Content="角" Grid.Column="15" Grid.Row="1" />
                            <Label Content="分" Grid.Column="16" Grid.Row="1" />
                            <Label Content="√" VerticalContentAlignment="Center" Grid.Column="17" Grid.RowSpan="2"/>
                            <Label Content="贷方金额" HorizontalContentAlignment="Center" Grid.Column="18" Grid.ColumnSpan="12"/>
                            <Label Content="十" Grid.Column="18" Grid.Row="1" />
                            <Label Content="亿" Grid.Column="19" Grid.Row="1" />
                            <Label Content="千" Grid.Column="20" Grid.Row="1" />
                            <Label Content="百" Grid.Column="21" Grid.Row="1" />
                            <Label Content="十" Grid.Column="22" Grid.Row="1" />
                            <Label Content="万" Grid.Column="23" Grid.Row="1" />
                            <Label Content="千" Grid.Column="24" Grid.Row="1" />
                            <Label Content="百" Grid.Column="25" Grid.Row="1" />
                            <Label Content="十" Grid.Column="26" Grid.Row="1" />
                            <Label Content="元" Grid.Column="27" Grid.Row="1" />
                            <Label Content="角" Grid.Column="28" Grid.Row="1" />
                            <Label Content="分" Grid.Column="29" Grid.Row="1" />
                            <Label Content="√" VerticalContentAlignment="Center" Grid.Column="30" Grid.RowSpan="2"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="31" Grid.RowSpan="2">
                                <Run Text="借"/>
                                <LineBreak />
                                <Run Text="或" />
                                <LineBreak />
                                <Run Text="贷" />
                            </TextBlock>
                            <Label Content="十" Grid.Column="32" Grid.Row="1" />
                            <Label Content="亿" Grid.Column="33" Grid.Row="1" />
                            <Label Content="千" Grid.Column="34" Grid.Row="1" />
                            <Label Content="百" Grid.Column="35" Grid.Row="1" />
                            <Label Content="十" Grid.Column="36" Grid.Row="1" />
                            <Label Content="万" Grid.Column="37" Grid.Row="1" />
                            <Label Content="千" Grid.Column="38" Grid.Row="1" />
                            <Label Content="百" Grid.Column="39" Grid.Row="1" />
                            <Label Content="十" Grid.Column="40" Grid.Row="1" />
                            <Label Content="元" Grid.Column="41" Grid.Row="1" />
                            <Label Content="角" Grid.Column="42" Grid.Row="1" />
                            <Label Content="分" Grid.Column="43" Grid.Row="1" />
                            <Label Content="金额" HorizontalContentAlignment="Center" Grid.Column="32" Grid.ColumnSpan="12"/>
                            <Label Content="√" VerticalContentAlignment="Center" Grid.Column="44" Grid.RowSpan="2"/>
                            <DataGrid x:Name="DataGrid_科目明细" Grid.Row="2" ItemsSource="{Binding}" Grid.ColumnSpan="45" CanUserAddRows="False" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="column1" Binding="{Binding 月}"/>
                                    <DataGridTextColumn x:Name="column2" Binding="{Binding 日}"/>
                                    <DataGridTextColumn x:Name="column3" Binding="{Binding 号数}"/>
                                    <DataGridTextColumn x:Name="column4" MinWidth="100" Binding="{Binding 摘要}"/>
                                    <DataGridTextColumn x:Name="column5"/>
                                    <DataGridTextColumn x:Name="column6" Binding="{Binding 借方金额1}"/>
                                    <DataGridTextColumn x:Name="column7" Binding="{Binding 借方金额2}"/>
                                    <DataGridTextColumn x:Name="column8" Binding="{Binding 借方金额3}"/>
                                    <DataGridTextColumn x:Name="column9" Binding="{Binding 借方金额4}"/>
                                    <DataGridTextColumn x:Name="column10" Binding="{Binding 借方金额5}"/>
                                    <DataGridTextColumn x:Name="column11" Binding="{Binding 借方金额6}"/>
                                    <DataGridTextColumn x:Name="column12" Binding="{Binding 借方金额7}"/>
                                    <DataGridTextColumn x:Name="column13" Binding="{Binding 借方金额8}"/>
                                    <DataGridTextColumn x:Name="column14" Binding="{Binding 借方金额9}"/>
                                    <DataGridTextColumn x:Name="column15" Binding="{Binding 借方金额10}"/>
                                    <DataGridTextColumn x:Name="column16" Binding="{Binding 借方金额11}"/>
                                    <DataGridTextColumn x:Name="column17" Binding="{Binding 借方金额12}"/>
                                    <DataGridTextColumn x:Name="column18"/>
                                    <DataGridTextColumn x:Name="column19" Binding="{Binding 贷方金额1}"/>
                                    <DataGridTextColumn x:Name="column20" Binding="{Binding 贷方金额2}"/>
                                    <DataGridTextColumn x:Name="column21"	Binding="{Binding 贷方金额3}"/>
                                    <DataGridTextColumn x:Name="column22"	Binding="{Binding 贷方金额4}"/>
                                    <DataGridTextColumn x:Name="column23"	Binding="{Binding 贷方金额5}"/>
                                    <DataGridTextColumn x:Name="column24"	Binding="{Binding 贷方金额6}"/>
                                    <DataGridTextColumn x:Name="column25"	Binding="{Binding 贷方金额7}"/>
                                    <DataGridTextColumn x:Name="column26"	Binding="{Binding 贷方金额8}"/>
