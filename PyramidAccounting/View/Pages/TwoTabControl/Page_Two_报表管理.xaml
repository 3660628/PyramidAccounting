                        <Label Content="负债部类" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="0" />
                        <Label Content="年初数" HorizontalAlignment="Center" Grid.Column="6" Grid.Row="0" />
                        <Label Content="期末数" HorizontalAlignment="Center" Grid.Column="7" Grid.Row="0" />
                        <Label Content="资产类" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" />
                        <Label Content="二、负债类" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" />
                        <Label Content="101" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" />
                        <Label Content="现金" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" />
                        <Label Content="201" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="2" />
