                        <Label Content="107" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="8" />
						<Label Content="单位零余额账户用款额度（预算内）" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="8" />
                        <Label Content="负债合计" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="8" />
