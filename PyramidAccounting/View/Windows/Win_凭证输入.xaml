<Window x:Name="Window_凭证输入" x:Class="PA.View.Windows.Win_凭证输入"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="凭证输入" Height="300" Width="600" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" MouseLeftButtonDown="Window_凭证输入_MouseLeftButtonDown" Background="{x:Null}" Topmost="True">
    <Grid Background="White" Margin="5">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0"/>
        </Grid.Effect>
        <Grid Margin="0" VerticalAlignment="Top" Height="25" Background="#FF29A2FF" IsEnabled="False"/>

        <Button x:Name="Button_Close" Content="Button" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" Width="28" Height="20" Template="{DynamicResource ButtonControlTemplate_Close}" Click="Button_Close_Click"/>
        <DataGrid HorizontalAlignment="Left" Margin="46,85,0,0" VerticalAlignment="Top" Width="510" Height="152">
            <DataGrid.Columns>
                <DataGridTextColumn Header="摘要"/>
                <DataGridTextColumn Header="会计科目"/>
                <DataGridTextColumn Header="借方"/>
                <DataGridTextColumn Header="贷方"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
